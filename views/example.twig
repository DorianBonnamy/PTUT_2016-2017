{% extends "layout.twig" %}

{% block body %}

	<center><h1>Articles</h1></center>

    {% if items %}
		<ul>
		{% for item in items %}
			<li>
                <div class="container col-md-12">
                    <div class="form-group col-lg-3"></div>
                    <div class="form-group col-lg-6 img-thumbnail">
                        <h1><center><b>{{ item.getTitre() }}</b></center></h1>
                        <img src={{ item.getImage() }} alt="Picture" class="img-thumbnail" width="720" height=auto>
                        <br>
                        <h4>{{ item.getTexte() }}</h4>
                        <div class="form-group col-lg-5"></div>
                        <div class="form-group col-lg-4"><button type="button" class="btn">Post comment</button></div>

                        <div class="form-group col-lg-1"></div>

                        <a class ="btn btn-danger" href={{ app.url_generator.generate('GET_remove_index', {'index':item.getId()}) }}>supprimer </a>


                    </div>
                </div>

            </li>
        {% endfor %}
		</ul>
	{% endif %}

{% endblock %}