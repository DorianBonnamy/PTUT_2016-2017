{% extends "layout.twig" %}

{% block body %}
    {% include 'templates/header.html' %}
    <div class="container col-md-12">
        <div class="col-md-12">
            <div class="col-lg-3"></div>
            <div class="col-lg-5">
                <form method="get" action={{ app.url_generator.generate('GET_') }}>
                    <button class ="btn btn-default">Passer utilisateur</button>
                </form>
            </div>
            <div class="col-lg-3">
                <form method="post" action={{ app.url_generator.generate('POST_create') }}>
                    <button class ="btn btn-default">Creer Article</button>
                </form>
            </div>
        </div>

        <div class="form-group col-md-3"></div>

        {% if articles %}
            <div class="col-md-6 img-thumbnail">

                {% for article in articles %}
                    <h1><center><b>{{ article.getTitre() }}</b></center></h1>
                    <a href={{ app.url_generator.generate('GET_article_index', {'index':article.getId()}) }}>
                        <img  src={{ article.getImage() }} alt="Picture" class="img-thumbnail col-lg-12" width=auto height=auto style="margin-left: auto;
margin-right: auto; margin-bottom: 50px; width="100%">
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {% include 'templates/footer.html' %}
{% endblock %}